{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"${workspaceFolder}/main.cpp",
				"${workspaceFolder}/workFunc.cpp",
				"${workspaceFolder}/workCoro.cpp",
				//"${workspaceFolder}/mandelbrotCoro.cpp",
				//"${workspaceFolder}/mandelbrotFunc.cpp",
				//"${workspaceFolder}/mctsFunc.cpp",
				//"${workspaceFolder}/mctsCoro.cpp",


				
				"-I/usr/local/include/benchmark",
				"-L/usr/local/lib",
				"-lbenchmark",
				"-lbenchmark_main",
				
				
				"-o",
				"${workspaceFolder}/main",
				
				
				"-std=c++20",
				"-latomic",
				"-fcoroutines",
				"-fconcepts",
				"-O2",
				"-g",
				"-pthread"
			],
			
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}